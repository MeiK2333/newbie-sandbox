{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noErrorTruncation": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}